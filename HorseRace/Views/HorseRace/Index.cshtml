@{
    ViewData["Title"] = "Logowanie";
}
    <div class="okno_glowne">
        <img class="logo_glowne" src="images/Logo.png" />
        <div class="okno_logowanie">
        <span id="powitanie" style="font-weight:600;">
            Witaj na Grand Prix!
        </span>
            <p>
            Tor czeka na nowego czempiona. <br />
            Zaloguj się, aby dołączyć do rywalizacji.
        </p>

            <form asp-action="Index" method="post" class="form_logowanie">
                <div class="form-group">
                    <input type="text" class="form-control" name="login" id="login" required placeholder="login"/>
                </div>
                <div class="form-group">
                <input type="password" class="form-control" name="haslo" id="haslo" required placeholder="hasło" />
                </div>
                <br />
                <button type="submit" class="btn_zaloguj">ZALOGUJ SIĘ</button>
            </form>

            @if (ViewBag.Error != null)
            {
                <div style="color:red; margin-bottom:5px;" class="alert alert-danger mt-2">@ViewBag.Error</div>
            }
        Nie masz jeszcze konta? <a asp-controller="HorseRace" asp-action="Rejestracja" style="font-weight:600;">Zarejestruj się!</a>

        </div>

    </div>