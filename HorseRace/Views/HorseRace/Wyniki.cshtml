@model HorseRace.Models.Uzytkownik

@{
    ViewData["Title"] = "Wynik wyścigu";
    var wyscig = ViewBag.Wyscig as HorseRace.Models.Wyscig;
}
<div class="okno_glowne okno_tor">
    <div class="okno_gra">
        <div class="menu">
            <div class="pusty">
            </div>
            <div class="div_logo">
                <img class="logo_mniejsze" src="~/images/Logo.png" />
            </div>
            <div class="ikonki">
                <div class="ikonka_kasa"><img src="/images/podkowa.png" class="zlota_podkowa" /> @Model.ZlotePodkowy</div>
                <a asp-controller="HorseRace" asp-action="Index" class="ikonka_wyloguj">WYLOGUJ SIĘ</a>
            </div>
        </div>
        <div class="user_body wynik_body">
            <div class="div_wynik">
                <h2 class="wynik_tytul">WYŚCIG @wyscig.Nazwa zakończony.</h2>
                <p>Wyścig dobiegł końca! Emocje sięgnęły zenitu!</p>
                <div>
                    <p class="wynik1">@Html.Raw(ViewBag.Komunikat1)</p>
                    <p class="wynik2">@Html.Raw(ViewBag.Komunikat2)</p>
                </div>
                <a asp-controller="HorseRace" asp-action="Ranking" asp-route-id="@Model.Id" class="ikonka_ranking">RANKING</a>
            </div>
                    
            <a asp-controller="HorseRace" asp-action="PanelUser" asp-route-id="@Model.Id" style="font-weight:600;">Cofnij</a>
        </div>
    </div>

</div>



