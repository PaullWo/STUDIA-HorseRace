@model HorseRace.Models.Kon

@{
    ViewData["Title"] = "Edytuj Konia";
}

<div class="okno_glowne">
    <img class="logo_glowne" src="~/images/Logo.png" />
    <div class="okno_panelAdmin1">
        <h2>Edytuj konia</h2>

        <form asp-action="EdytujKonia" method="post" class="form_dodaj">
            <div class="div_dodaj">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nazwa" class="control-label">Nazwa: </label>
                    <input data-val="true" asp-for="Nazwa" class="label_dodaj" /><br />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Umaszczenie" class="control-label">Umaszczenie: </label>
                    <select asp-for="Umaszczenie" class="label_dodaj" asp-items="ViewBag.UmaszczenieList"></select><br />
                    <span asp-validation-for="Umaszczenie" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxWytrzymalosc" class="control-label">Wytrzymałość: </label>
                    <input data-val="true" asp-for="MaxWytrzymalosc" class="label_dodaj" /><br />
                    <span asp-validation-for="MaxWytrzymalosc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxSzybkosc" class="control-label">Szybkość: </label>
                    <input data-val="true" asp-for="MaxSzybkosc" class="label_dodaj" /><br />
                    <span asp-validation-for="MaxSzybkosc" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="EDYTUJ" class="btn btn-primary, btn_zaloguj" />
            </div>
        </form>
        <a asp-controller="HorseRace" asp-action="Stajnia" style="font-weight:600;">Cofnij</a>
    </div>
</div>


