@model HorseRace.Models.Kon

@{
    ViewData["Title"] = "Dodaj Konia";
}

<div class="okno_glowne">
    <img class="logo_glowne" src="~/images/Logo.png" />
    <div class="okno_panelAdmin1">
        <h2>Dodaj nowego konia</h2>

        <form asp-action="DodajKonia" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input data-val="true" asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
            <select asp-for="Umaszczenie" class="form-control" asp-items="Html.GetEnumSelectList<HorseRace.Models.Umaszczenie>()">
                <option value="">-- wybierz umaszczenie --</option>
            </select>
                <span asp-validation-for="Umaszczenie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxWytrzymalosc" class="control-label"></label>
                <input data-val="true"  asp-for="MaxWytrzymalosc" class="form-control" />
                <span asp-validation-for="MaxWytrzymalosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxSzybkosc" class="control-label"></label>
                <input data-val="true"  asp-for="MaxSzybkosc" class="form-control" />
                <span asp-validation-for="MaxSzybkosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


