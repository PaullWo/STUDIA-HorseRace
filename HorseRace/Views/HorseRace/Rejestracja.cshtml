@{
    ViewData["Title"] = "Rejestracja";
}
<div class="okno_glowne">
    <img class="logo_glowne" src="~/images/Logo.png" />
    <div class="okno_logowanie">
        <span id="powitanie" style="font-weight:600;">
            Rejestracja
            <br />
        </span>
        <br />
        <form asp-action="Rejestracja" method="post" class="form_logowanie">
            <div class="form-group">
                <input type="text" class="form-control" name="login" id="login" required placeholder="login" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="haslo" id="haslo" required placeholder="hasło" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="potwierdzhaslo" id="haslo" required placeholder="powtórz hasło" />
            </div>
            <br />
            <button type="submit" class="btn_zaloguj">ZAREJESTRUJ SIĘ</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div style="color:red; margin-bottom:5px;" class="alert alert-danger mt-2">@ViewBag.Error</div>
        }
        <a asp-controller="HorseRace" asp-action="Index" style="font-weight:600;">Cofnij do logowania</a>

    </div>

</div>